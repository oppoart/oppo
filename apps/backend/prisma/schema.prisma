generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  emailVerified       Boolean              @default(false)
  name                String?
  image               String?
  preferences         Json?
  settings            Json?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  linkedinCredentials Json?
  linkedinProfile     Json?
  accounts            Account[]
  profiles            ArtistProfile[]
  bookmarks           Bookmark[]
  passwordResetTokens PasswordResetToken[]
  queryBuckets        QueryBucket[]
  sessions            Session[]
  activities          UserActivity[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model ArtistProfile {
  id               String                 @id @default(cuid())
  userId           String
  name             String
  mediums          String[]               @default(["other"])
  bio              String?
  artistStatement  String?
  skills           String[]
  interests        String[]
  experience       String?
  location         String?
  website          String?
  portfolioUrl     String?
  preferences      Json?
  settings         Json?
  locations        String[]               @default([])
  opportunityTypes String[]               @default([])
  amountRanges     String[]               @default([])
  themes           String[]               @default([])
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  user             User                   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("artist_profiles")
}

model Opportunity {
  id               String                  @id @default(cuid())
  title            String
  organization     String?
  description      String
  url              String
  deadline         DateTime?
  amount           String?
  location         String?
  tags             String[]
  sourceType       String
  sourceUrl        String?
  sourceMetadata   Json?
  discoveredAt     DateTime                @default(now())
  lastUpdated      DateTime                @default(now()) @updatedAt
  relevanceScore   Float?
  semanticScore    Float?
  keywordScore     Float?
  categoryScore    Float?
  aiServiceUsed    String?
  processingTimeMs Int?
  processed        Boolean                 @default(false)
  status           String                  @default("new")
  applied          Boolean                 @default(false)
  notes            String?
  starred          Boolean                 @default(false)
  createdAt        DateTime                @default(now())
  sourceId         String?
  source           OpportunitySource?      @relation(fields: [sourceId], references: [id])
  duplicateOf      OpportunityDuplicate[]  @relation("DuplicateOpportunity")
  duplicates       OpportunityDuplicate[]  @relation("MasterOpportunity")
  matches          OpportunityMatch[]
  sourceLinks      OpportunitySourceLink[]

  @@map("opportunities")
}

model OpportunityMatch {
  id            String      @id @default(cuid())
  opportunityId String
  matchScore    Float
  reasoning     String?
  createdAt     DateTime    @default(now())
  opportunity   Opportunity @relation(fields: [opportunityId], references: [id])

  @@map("opportunity_matches")
}

model OpportunitySource {
  id            String                  @id @default(cuid())
  name          String
  type          String
  url           String?
  enabled       Boolean                 @default(true)
  lastScanned   DateTime?
  successCount  Int                     @default(0)
  errorCount    Int                     @default(0)
  config        Json?
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  active        Boolean                 @default(true)
  discoveryJobs DiscoveryJob[]
  opportunities Opportunity[]
  sourceLinks   OpportunitySourceLink[]

  @@map("opportunity_sources")
}

model OpportunitySourceLink {
  id            String            @id @default(cuid())
  opportunityId String
  sourceId      String
  discoveredAt  DateTime          @default(now())
  opportunity   Opportunity       @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  source        OpportunitySource @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([opportunityId, sourceId])
  @@map("opportunity_source_links")
}

model DiscoveryJob {
  id                 String             @id @default(cuid())
  sourceId           String?
  sourceType         String
  sourceName         String?
  status             String             @default("pending")
  startedAt          DateTime?
  completedAt        DateTime?
  opportunitiesFound Int                @default(0)
  errors             Json?
  metadata           Json?
  processingTimeMs   Int?
  createdAt          DateTime           @default(now())
  source             OpportunitySource? @relation(fields: [sourceId], references: [id])

  @@map("discovery_jobs")
}

model OpportunityDuplicate {
  id                     String      @id @default(cuid())
  masterOpportunityId    String
  duplicateOpportunityId String
  similarityScore        Float
  mergeStrategy          String?
  createdAt              DateTime    @default(now())
  duplicateOpportunity   Opportunity @relation("DuplicateOpportunity", fields: [duplicateOpportunityId], references: [id], onDelete: Cascade)
  masterOpportunity      Opportunity @relation("MasterOpportunity", fields: [masterOpportunityId], references: [id], onDelete: Cascade)

  @@unique([masterOpportunityId, duplicateOpportunityId])
  @@map("opportunity_duplicates")
}

model AIServiceMetrics {
  id             String   @id @default(cuid())
  serviceName    String
  operation      String
  responseTimeMs Int
  success        Boolean
  costUsd        Float?
  qualityScore   Float?
  errorMessage   String?
  metadata       Json?
  createdAt      DateTime @default(now())

  @@map("ai_service_metrics")
}

model UserActivity {
  id           String   @id @default(cuid())
  userId       String
  activityType String
  entityType   String
  entityId     String?
  metadata     Json?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_activities")
}

model QueryBucket {
  id        String   @id @default(cuid())
  userId    String
  profileId String?
  query     String
  source    String   @default("manual")
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, query])
  @@map("query_buckets")
}

model AIAnalysisCache {
  id                  String   @id @default(cuid())
  opportunityId       String
  artistProfileId     String
  relevanceScore      Float
  category            String
  reasoning           String
  matchedCriteria     String[]
  missingRequirements String[]
  confidence          Float
  aiProvider          String
  aiModel             String
  responseHash        String
  processingTimeMs    Int
  createdAt           DateTime @default(now())
  expiresAt           DateTime

  @@unique([opportunityId, artistProfileId])
  @@index([expiresAt])
  @@index([opportunityId])
  @@index([artistProfileId])
  @@map("ai_analysis_cache")
}

model QueryGenerationHistory {
  id                   String   @id @default(cuid())
  artistProfileId      String
  opportunityType      String
  generatedQueries     String[]
  queryGenerationStyle String
  aiProvider           String
  aiModel              String
  temperature          Float
  maxTokens            Int
  processingTimeMs     Int
  queryCount           Int
  responseHash         String
  metadata             Json?
  createdAt            DateTime @default(now())

  @@index([artistProfileId])
  @@index([opportunityType])
  @@index([createdAt])
  @@map("query_generation_history")
}

model Bookmark {
  id          String    @id @default(cuid())
  userId      String
  url         String
  title       String?
  description String?
  tags        String[]  @default([])
  lastChecked DateTime?
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, url])
  @@map("bookmarks")
}

model SystemAlert {
  id         String    @id @default(cuid())
  type       String
  title      String
  message    String
  source     String?
  metadata   Json?
  resolved   Boolean   @default(false)
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())

  @@index([type])
  @@index([resolved])
  @@index([createdAt])
  @@map("system_alerts")
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String?
  type      String
  subject   String
  message   String
  status    String   @default("new")
  priority  String   @default("medium")
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([priority])
  @@index([createdAt])
  @@map("feedback")
}

model QueryTemplateGroup {
  id        String          @id @default(cuid())
  name      String
  order     Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  templates QueryTemplate[]

  @@map("query_template_groups")
}

model QueryTemplate {
  id           String             @id @default(cuid())
  groupId      String
  template     String
  placeholders String[]           @default([])
  order        Int                @default(0)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  group        QueryTemplateGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("query_templates")
}

