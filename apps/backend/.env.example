# =====================================
# OPPO Backend Environment Configuration
# =====================================

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/oppo_dev"

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here_replace_in_production_must_be_at_least_32_characters_long
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# =====================================
# Opportunity Discovery System APIs
# =====================================

# AI Services (LLM Integration)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Web Scraping Services
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Web Search APIs
SERPAPI_KEY=your_serpapi_key_here
TAVILY_API_KEY=your_tavily_api_key_here  
BING_SEARCH_KEY=your_bing_search_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Social Media APIs  
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Email Processing (Newsletter Monitoring)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=get@oppo.art
SMTP_PASS=your_email_password_here
IMAP_HOST=imap.gmail.com
IMAP_PORT=993

# Redis Configuration (Job Queue & Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_needed

# =====================================
# Discovery System Configuration
# =====================================

# Primary AI Service Selection
PRIMARY_AI_SERVICE=openai
FALLBACK_AI_SERVICE=anthropic
ENABLE_LOCAL_AI=false

# Discovery Job Settings
DISCOVERY_SCHEDULE_ENABLED=true
WEBSEARCH_FREQUENCY_HOURS=6
SOCIAL_SCAN_FREQUENCY_HOURS=2
NEWSLETTER_CHECK_FREQUENCY_HOURS=1
BOOKMARK_SCAN_FREQUENCY_HOURS=12

# Performance & Cost Settings
MAX_OPPORTUNITIES_PER_SCAN=100
AI_COST_LIMIT_DAILY_USD=10.00
ENABLE_DISCOVERY_METRICS=true

# Data Quality Settings  
MIN_OPPORTUNITY_RELEVANCE_SCORE=0.6
ENABLE_DEDUPLICATION=true
DEDUPLICATION_SIMILARITY_THRESHOLD=0.85

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=your-email@example.com

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# =====================================
# Environment-Specific Notes:
# =====================================
# 
# DEVELOPMENT:
# - Use local PostgreSQL database
# - Enable debug logging
# - Allow localhost CORS
# 
# PRODUCTION:
# - Use managed database service (AWS RDS, etc.)
# - Use environment secrets management
# - Restrict CORS to production domain
# - Use stronger JWT secrets (generated)
# - Enable SSL database connections
# 
# TESTING:
# - Use separate test database
# - Disable rate limiting for tests
# - Use test-specific credentials
#