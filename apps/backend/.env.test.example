# =====================================
# OPPO Test Environment Configuration
# =====================================

# Server Configuration
NODE_ENV=test
PORT=3002
FRONTEND_URL=http://localhost:3000

# Database Configuration (Use separate test database)
DATABASE_URL="postgresql://username:password@localhost:5432/oppo_test"

# Authentication & Security (Use test credentials)
JWT_SECRET=test_jwt_secret_at_least_32_characters_long_for_testing_purposes
BCRYPT_ROUNDS=4
SESSION_TIMEOUT_HOURS=1

# External APIs (Use test/mock keys)
OPENAI_API_KEY=test_openai_api_key
FIRECRAWL_API_KEY=test_firecrawl_api_key

# Rate Limiting Configuration (Disabled for tests)
RATE_LIMIT_WINDOW_MS=0
RATE_LIMIT_MAX_REQUESTS=10000
AUTH_RATE_LIMIT_MAX=10000

# Logging Configuration (Debug level for tests)
LOG_LEVEL=error

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=test@example.com

# Health Check Configuration
HEALTH_CHECK_ENABLED=false

# =====================================
# Test Environment Notes:
# =====================================
# 
# - Uses separate test database to avoid data conflicts
# - Reduced bcrypt rounds for faster tests
# - Rate limiting disabled to avoid test failures
# - Error-only logging to reduce test noise
# - Short session timeout for testing auth expiry
# - Health checks disabled to avoid external dependencies
#